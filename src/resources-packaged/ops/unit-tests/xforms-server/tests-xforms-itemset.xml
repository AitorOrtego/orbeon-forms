    <test description="Simple itemset" name="oxf:pipeline">
        <input name="config">
            <p:config xmlns:oxf="http://www.orbeon.com/oxf/processors" xmlns:xxforms="http://orbeon.org/oxf/xml/xforms">
                <p:param name="response" type="output"/>

                <p:processor name="oxf:pipeline">
                    <p:input name="config" href="xforms-server/wrap-xforms-state.xpl"/>
                    <p:input name="document">
                        <xhtml:html xmlns:fr="http://orbeon.org/oxf/xml/form-runner">
                            <xhtml:head>
                                <xforms:model id="model" xxforms:encrypt-item-values="false">
                                    <xforms:instance id="selection">
                                        <selected>1</selected>
                                    </xforms:instance>
                                    <xforms:instance id="itemset">
                                        <fruits>
                                            <fruit id="1">
                                                <description>Apple</description>
                                                <color>Green</color>
                                            </fruit>
                                            <fruit id="2">
                                                <description>Banana</description>
                                                <color>Yellow</color>
                                            </fruit>
                                            <fruit id="3">
                                                <description>Orange</description>
                                                <color>Orange</color>
                                            </fruit>
                                            <fruit id="4">
                                                <description>Kiwi</description>
                                                <color>Green</color>
                                            </fruit>
                                        </fruits>
                                    </xforms:instance>
                                </xforms:model>
                            </xhtml:head>
                            <xhtml:body>

                                <xforms:select id="select-control" ref=".">
                                    <xforms:label>Items</xforms:label>
                                    <xforms:itemset nodeset="instance('itemset')/fruit">
                                        <xforms:label ref="description"/>
                                        <xforms:value ref="@id"/>
                                    </xforms:itemset>
                                </xforms:select>

                            </xhtml:body>
                        </xhtml:html>
                    </p:input>
                    <p:output name="response" ref="response"/>
                </p:processor>
            </p:config>
        </input>
        <output name="response">
            <xxf:event-response xmlns:xxf="http://orbeon.org/oxf/xml/xforms">
                <xxf:dynamic-state>
                    <dynamic-state>
                        <instances>
                            <instance id="selection" model-id="model">
                                <selected>1</selected>
                            </instance>
                            <instance id="itemset" model-id="model">
                                <fruits>
                                    <fruit id="1">
                                        <description>Apple</description>
                                        <color>Green</color>
                                    </fruit>
                                    <fruit id="2">
                                        <description>Banana</description>
                                        <color>Yellow</color>
                                    </fruit>
                                    <fruit id="3">
                                        <description>Orange</description>
                                        <color>Orange</color>
                                    </fruit>
                                    <fruit id="4">
                                        <description>Kiwi</description>
                                        <color>Green</color>
                                    </fruit>
                                </fruits>
                            </instance>
                        </instances>
                    </dynamic-state>
                </xxf:dynamic-state>
                <xxf:action>
                    <xxf:control-values>
                        <xxf:control id="select-control" label="Items">1</xxf:control>
                        <xxf:itemset id="select-control">[["Apple","1"],["Banana","2"],["Orange","3"],["Kiwi","4"]]</xxf:itemset>
                    </xxf:control-values>
                </xxf:action>
            </xxf:event-response>
        </output>
    </test>

    <test description="Hierarchical itemset" name="oxf:pipeline">
