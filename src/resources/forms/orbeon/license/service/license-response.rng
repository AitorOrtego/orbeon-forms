<grammar datatypeLibrary="http://www.w3.org/2001/XMLSchema-datatypes"
         xmlns="http://relaxng.org/ns/structure/1.0">

    <start>
        <element name="signed-data">
            <element name="data">
                <element name="license">
                    <element name="licensor">
                        <data type="string">
                            <param name="minLength">1</param>
                        </data>
                    </element>
                    <element name="licensee">
                        <data type="string">
                            <param name="minLength">1</param>
                        </data>
                    </element>
                    <element name="organization">
                        <data type="string">
                            <param name="minLength">1</param>
                        </data>
                    </element>
                    <element name="email">
                        <data type="string">
                            <param name="minLength">1</param>
                        </data>
                    </element>
                    <element name="issued">
                        <data type="date"/>
                    </element>
                    <element name="version">
                        <data type="string"/>
                    </element>
                    <element name="expiration">
                        <optional>
                            <data type="date"/>
                        </optional>
                    </element>
                </element>
            </element>
            <element name="signature">
                <data type="string"/>
            </element>
        </element>
    </start>

</grammar>
